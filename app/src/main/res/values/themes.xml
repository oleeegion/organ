<resources >
    <!-- Base application theme. -->
    <style name="Theme.Calendar.Peach" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_400</item>
        <item name="colorPrimaryVariant">@color/pink_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_400</item>
        <item name="colorSecondaryVariant">@color/pink_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/pink_200</item>
        <item name="android:textColor">@color/pink_text</item>
        <item name="android:statusBarColor">@color/pink_600</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Calendar.Grape" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/violet_400</item>
        <item name="colorPrimaryVariant">@color/violet_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/violet_400</item>
        <item name="colorSecondaryVariant">@color/violet_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/violet_200</item>
        <item name="android:textColor">@color/violet_text</item>
        <item name="android:statusBarColor">@color/violet_600</item>
        <!-- Customize your theme here. -->
    </style>
</resources>